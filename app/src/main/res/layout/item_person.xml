<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <TextView
            android:id="@+id/tv_main_name"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:hint="Name"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tv_main_surname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/tv_main_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="Surname"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_main_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_main_name"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:hint="Phone"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_main_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_main_name"
            android:layout_below="@+id/tv_main_phone"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:hint="Email"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_main_skype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_main_name"
            android:layout_below="@+id/tv_main_email"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:hint="Skype"
            android:textSize="14dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageButton
            android:id="@+id/ib_delete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_delete"
            android:layout_toLeftOf="@+id/ib_skype"
            android:layout_toStartOf="@+id/ib_skype" />
        <ImageButton
            android:id="@+id/ib_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/stat_sys_phone_call"
            android:layout_below="@+id/ib_delete"/>
        <ImageButton
            android:id="@+id/ib_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_email"
            android:layout_toRightOf="@id/ib_delete"/>
        <ImageButton
            android:id="@+id/ib_skype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_info"
            android:layout_toRightOf="@+id/ib_call"
            android:layout_below="@+id/ib_email"/>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>